<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SHXamLab4.Views.TablePages.Table2Page">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Id фильма" />
            <Entry Text="{Binding IdMovie}" />
            <Label Text="Количество" />
            <Entry Text="{Binding Count}" />
            <Label Text="Отпускная стоимость" />
            <Entry Text="{Binding SellPrice}" />
            <Label Text="Дата продажи" />
            <Entry Text="{Binding DateSell}" />
            <StackLayout Orientation="Horizontal">
                <Button Text="Сохранить" Clicked="SaveSell" />
                <Button Text="Удалить" Clicked="DeleteSell" />
                <Button Text="Отмена" Clicked="Cancel" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>