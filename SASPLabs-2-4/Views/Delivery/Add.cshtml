
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SASPLabs_2_4.Models.Delivery

<h2>Добавление поставки</h2>
<div>
    @using (Html.BeginForm("Add", "Delivery", FormMethod.Post))
    {
        <p>Введите название</p>
        @Html.TextBoxFor(a => a.NameOfProduct)
        @Html.ValidationMessageFor(a => a.NameOfProduct)
        <br>
        <p>Введите количество</p>
        @Html.TextBoxFor(a => a.Count)
        @Html.ValidationMessageFor(a => a.Count)
        <br>
        <br>
        <input type="submit" value="Добавить">
    }
    <br>
    @Html.ActionLink("Вернуться назад", "Back")
</div>

