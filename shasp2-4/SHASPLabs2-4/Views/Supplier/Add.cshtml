
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SHASPLabs2_4.Models.Supplier

<h2>Добавление поставщика</h2>
<div>
    @using (Html.BeginForm("Add", "Supplier", FormMethod.Post))
    {
        <p>Введите название</p>
        @Html.TextBoxFor(a => a.Name)
        @Html.ValidationMessageFor(a => a.Name)
        <br>
        <p>Введите страну</p>
        @Html.TextBoxFor(a => a.Country)
        @Html.ValidationMessageFor(a => a.Country)
        <br>
        <br>
        <input type="submit" value="Добавить">
    }
    <br>
    @Html.ActionLink("Вернуться назад", "Back")
</div>

