<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SHXamLab4.Views.TablePages.Table1Page">
    <StackLayout>
        <Label Text="Имя" />
        <Entry Text="{Binding Name}" />
        <Label Text="Id кинотеатра" />
        <Entry Text="{Binding IdCinema}" />
        <Label Text="Дата выхода" />
        <Entry Text="{Binding Date}" />
        <Label Text="Цена" />
        <Entry Text="{Binding Price}" />
        <StackLayout Orientation="Horizontal">
            <Button Text="Сохранить" Clicked="SaveMovie" />
            <Button Text="Удалить" Clicked="DeleteMovie" />
            <Button Text="Отмена" Clicked="Cancel" />
        </StackLayout>
    </StackLayout>
</ContentPage>